# Maintainer: Andreas Brenk <mail@andreasbrenk.com>
pkgname=openhab-binding-koubachi
pkgver=1.2.1
pkgrel=1
pkgdesc="The Koubachi binding for the openHAB Home Automation Bus"
url="http://openhab.org/"
arch=('any')
license=('GPL3')
depends=('openhab-runtime')
source=("https://openhab.googlecode.com/files/openhab-addons-${pkgver}.zip")
md5sums=('c00395b833271aec3dad6b1f4f07809c')
options=(!strip)

package() {
  mkdir -p ${pkgdir}/opt/openhab/addons
  cp ${srcdir}/org.openhab.binding.koubachi-${pkgver}.jar ${pkgdir}/opt/openhab/addons
}

