# Maintainer: Andreas Brenk <mail@andreasbrenk.com>
pkgname=openhab-io-freetts
pkgver=1.2.0
pkgrel=1
pkgdesc="Text-to-Speech support using FreeTTS for the openHAB Home Automation Bus"
url="http://openhab.org/"
arch=('any')
license=('GPL3')
depends=('openhab-runtime')
source=("https://openhab.googlecode.com/files/openhab-addons-${pkgver}.zip")
md5sums=('e2b1305fc193c2dabb7d3d65fb52a5e4')
options=(!strip)

package() {
  cd "${srcdir}"

  mkdir -p "${pkgdir}/opt/openhab/addons"
  install -m 644 org.openhab.io.multimedia.tts.freetts-${pkgver}.jar "${pkgdir}/opt/openhab/addons/"
}

# vim:set ts=2 sw=2 et:
