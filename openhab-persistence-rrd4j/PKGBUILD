# Maintainer: Andreas Brenk <mail@andreasbrenk.com>
pkgname=openhab-persistence-rrd4j
pkgver=1.2.0
pkgrel=1
pkgdesc="The RRD4J persistence service for the openHAB Home Automation Bus"
url="http://openhab.org/"
arch=('any')
license=('GPL3')
depends=('openhab-runtime')
source=("https://openhab.googlecode.com/files/openhab-addons-${pkgver}.zip")
md5sums=('e2b1305fc193c2dabb7d3d65fb52a5e4')
options=(!strip)

package() {
  cd "${srcdir}"

  mkdir -p "${pkgdir}/opt/openhab/addons"
  install -m 644 org.openhab.persistence.rrd4j-${pkgver}.jar "${pkgdir}/opt/openhab/addons/"
}

