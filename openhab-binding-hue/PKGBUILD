# Maintainer: Andreas Brenk <mail@andreasbrenk.com>
pkgname=openhab-binding-hue
pkgver=1.2.0
pkgrel=1
pkgdesc="The Philips Hue binding for the openHAB Home Automation Bus"
url="https://code.google.com/p/openhab/wiki/HueBinding"
arch=('any')
license=('GPL3')
depends=('openhab-runtime')
source=("https://openhab.googlecode.com/files/openhab-addons-${pkgver}.zip")
md5sums=('e2b1305fc193c2dabb7d3d65fb52a5e4')
options=(!strip)

package() {
  mkdir -p ${pkgdir}/opt/openhab/addons
  cp ${srcdir}/org.openhab.binding.hue-${pkgver}.jar ${pkgdir}/opt/openhab/addons
}

